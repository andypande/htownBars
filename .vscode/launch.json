{
    "version": "0.2.0",
    "configurations": [
    {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome",
        "sourceMaps": false,
        "file": "${workspaceRoot}/index.html",
        "runtimeArgs": [
            "--new-window",
            "remote-debugging-port=9222",
            "--disable-web-security",
            "--user-data-dir=c:",
            "--allow-file-access-from-files"
        ]
    }
    ]
}